{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
{\n  "build": {\n    "env": {\n      "API_URL": "https://api.example.com",\n      "ANOTHER_SECRET": "secret_value"\n    }\n  },\n  "production": {\n    "env": {\n      "NODE_ENV": "production"\n    }\n  }\n}
